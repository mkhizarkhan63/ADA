    <script>

        $(document).ready(function () {


            $("#TextUserName").text(JSON.parse(localStorage.getItem("userData")).username);


            var baseWebUrl = $("#baseWebUrl").val();

            $('#btnLogout').click(function () {
                localStorage.removeItem("userData");
                //localStorage.removeItem("Menu");

                postRequest(baseWebUrl + "DashBoard/Logout", null, function (res) {

                    if (res.status == 200) {
                        window.location.href = baseWebUrl + "Dashboard";
                    }
                    if (res.status == 401) {
                        window.location.href = baseWebUrl + "Dashboard";

                    }
                    if (res.status == 403) {
                        window.location.href = baseWebUrl + "Dashboard";
                    }
                    if (res.status == 500) {
                        window.location.href = baseWebUrl + "Dashboard";
                    }
                    if (res.status == 420) {
                        window.location.href = baseWebUrl + "Dashboard";
                    }

                    if (res.status == 600) {
                        window.location.href = baseWebUrl + "Dashboard";
                    }
                });
            });

        });
    </script>
